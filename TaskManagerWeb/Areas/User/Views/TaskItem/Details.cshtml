@using TaskManager.DataAccess.Utility
@using TaskManager.Models
@model TaskItem

<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="card-header bg-white border-bottom py-3 px-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0 fw-semibold" style="color:var(--tm-primary);">
            <i class="bi bi-clipboard2-check me-2"></i> Dettagli Task
        </h4>
        <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3">
            <i class="bi bi-arrow-left"></i> Torna ai task
        </a>
    </div>

    <div class="card-body px-4 py-4">
        <!-- Informazioni Task -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <h6 class="text-uppercase text-muted fw-semibold small mb-1">Titolo</h6>
                <p class="fs-6 fw-semibold text-dark">@Model.Title</p>
            </div>
            <div class="col-md-6">
                <h6 class="text-uppercase text-muted fw-semibold small mb-1">Descrizione</h6>
                <p class="text-secondary">@Model.Description</p>
            </div>
            <div class="col-md-6">
                <h6 class="text-uppercase text-muted fw-semibold small mb-1">Status</h6>
                <span class="badge bg-success-subtle text-success border px-3 py-2">@Model.Status.Name</span>
            </div>
            <div class="col-md-6">
                <h6 class="text-uppercase text-muted fw-semibold small mb-1">Scadenza</h6>
                <p class="text-dark fw-medium">
                    <i class="bi bi-calendar-event me-1 text-success"></i>
                    @(Model.DueDate.HasValue? Model.DueDate.Value.ToString("dd/MM/yyyy HH:mm") : "Nessuna data impostata")
                </p>
            </div>
        </div>

        <!-- Commenti -->
        <div class="border-top pt-4">
            <h5 class="fw-semibold mb-3 text-dark">
                <i class="bi bi-chat-left-text me-2 text-success"></i> Commenti
            </h5>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                <div class="list-group border-0">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="list-group-item border rounded-3 shadow-sm mb-3 p-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle text-success me-2" style="font-size: 1.3rem;"></i>
                                    <strong>@comment.AppUser.Name</strong>
                                </div>
                                <button type="button" class="btn btn-sm btn-outline-danger delete" data-id="@comment.Id">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </div>
                            <p class="mb-0 text-muted">@comment.Description</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light text-center text-muted">
                    <i class="bi bi-info-circle me-2"></i> Nessun commento presente.
                </div>
            }
        </div>
    </div>

    <div class="card-footer bg-light border-top py-3 px-4">
        <div class="d-flex gap-2 justify-content-end">
            @if (User.IsInRole(SD.Role_Admin))
            {
                <a asp-area="Admin" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-outline-tm rounded-3 px-4 py-2">
                    <i class="bi bi-pencil-square me-1"></i> Modifica Task
                </a>
            }else
            {
                <a asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-outline-tm rounded-3 px-4 py-2">
                    <i class="bi bi-pencil-square me-1"></i> Modifica Task
                </a>
            }
            <a asp-action="Upsert" asp-controller="Comment" asp-route-taskId="@Model.Id" class="btn btn-outline-tm rounded-3 px-4 py-2">
                <i class="bi bi-chat-left-text me-1"></i> Aggiungi Commento
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on("click", ".delete", function (e) {
            e.preventDefault();
            const commentId = $(this).data("id");

            Swal.fire({
                title: "Sei sicuro?",
                text: "Il commento verrà eliminato definitivamente.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#1c7d6f",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sì, elimina!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/User/Comment/Delete?id=' + commentId;
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --tm-primary: #1c7d6f;
        }

        /* Badge status */
        .bg-success-subtle {
            background-color: rgba(28,125,111,0.1);
            border: 1px solid rgba(28,125,111,0.2);
        }

        /* Lista commenti */
        .list-group-item {
            transition: all 0.2s ease-in-out;
        }

            .list-group-item:hover {
                background-color: rgba(28,125,111,0.03);
                transform: translateY(-2px);
            }

        /* Pulsanti */
        .btn-success {
            background-color: var(--tm-primary) !important;
            border-color: var(--tm-primary) !important;
        }

            .btn-success:hover {
                background-color: #17685e !important;
                border-color: #17685e !important;
            }
    </style>
}
