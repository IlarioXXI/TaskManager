@using TaskManagerWeb.Models
@model IEnumerable<TaskItem>

<div class="row pb-3">
    @foreach (var item in Model.Where(i => i.Status.Name.ToLower() == "not started" || i.Status.Name.ToLower() == "in progress"))
    {
        @if (item.Priority.Name.ToLower() == "low")
        {
            <div class="col-lg-3 col-sm-6 bg-success">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">

                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@item.Title</p>
                                    <p class="card-title text-warning text-center"><b>@item.Description</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">Status: <span>@item.Status.Name</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">Priority: <span>@item.Priority.Name</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">DueDate: <span>@item.DueDate.ToString()</span></p>
                                </div>
                            </div>
                            <div class="row">
                            
                                <div class="col-6">
                                    <a asp-controller="TaskItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary bg-gradient border-0 fom-controll">Details</a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (item.Priority.Name.ToLower() == "medium")
        {
            <div class="col-lg-3 col-sm-6 bg-warning">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">

                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@item.Title</p>
                                    <p class="card-title text-warning text-center">by <b>@item.Description</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center mb-0">Status: <p>@item.Status.Name</p></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">Priority: <span>@item.Priority.Name</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">DueDate: <span>@item.DueDate</span></p>
                                </div>
                            </div>
                            <div>
                                <a asp-controller="TaskItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary bg-gradient border-0 fom-controll">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (item.Priority.Name.ToLower() == "high")
        {
            <div class="col-lg-3 col-sm-6 text-bg-danger">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">

                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@item.Title</p>
                                    <p class="card-title text-warning text-center">by <b>@item.Description</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center mb-0">Status: <span>@item.Status.Name</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">Priority: <span>@item.Priority.Name</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">DueDate: <span>@item.DueDate</span></p>
                                </div>
                            </div>
                            <div>

                                <a asp-controller="TaskItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary bg-gradient border-0 fom-controll">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>


