@using TaskManager.Models
@model Comment

<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="card-header bg-white border-bottom py-3 px-4">
        <h4 class="mb-0 fw-semibold" style="color:var(--tm-primary);">
            <i class="bi bi-chat-dots me-2"></i> Aggiungi Commento
        </h4>
    </div>

    <div class="card-body px-4 py-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="TaskItemId" type="hidden" />
            <input asp-for="AppUserId" type="hidden" />

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-semibold text-muted small text-uppercase">
                    Testo del commento
                </label>
                <textarea asp-for="Description" class="form-control rounded-3 shadow-sm border"
                          placeholder="Scrivi qui il tuo commento..." rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 fw-semibold">
                    <i class="bi bi-send me-1"></i> Pubblica
                </button>
                <a asp-controller="Team" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3">
                    <i class="bi bi-arrow-left-circle me-1"></i> Torna alla lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
