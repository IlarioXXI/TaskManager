@page
@using TaskManager.DataAccess.Utility
@model RegisterModel

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height:80vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4" style="max-width:480px; width:100%;">
        <div class="text-center mb-3">
            <i class="bi bi-person-plus" style="font-size:3rem; color:var(--tm-primary);"></i>
            @if (User.IsInRole(SD.Role_Admin))
            {
                <h1 class="h4 fw-bold mt-2 text-dark">Registra un nuovo utente (Admin)</h1>
            }
            else
            {
                <h1 class="h4 fw-bold mt-2 text-dark">Crea un nuovo account</h1>
            }
            <p class="text-muted small mb-0">Compila i campi per registrarti</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username"
                       aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control rounded-3" autocomplete="name"
                       aria-required="true" />
                <label asp-for="Input.Name">Nome utente</label>
                <span asp-validation-for="Input.Name" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="new-password"
                       aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password"
                       aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Conferma password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            @if (User.IsInRole(SD.Role_Admin))
            {
                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList"
                            class="form-select rounded-3">
                        <option disabled selected>- Seleziona ruolo -</option>
                    </select>
                    <label asp-for="Input.Role">Ruolo</label>
                </div>
            }

            <button id="registerSubmit" type="submit"
                    class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                <i class="bi bi-person-plus me-1"></i> Registrati
            </button>
        </form>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-4 text-center">
                <hr class="my-3" />
                <p class="text-muted small mb-2">Oppure registrati con</p>
                <form id="external-account" asp-page="./ExternalLogin"
                      asp-route-returnUrl="@Model.ReturnUrl" method="post"
                      class="d-flex flex-wrap justify-content-center gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-secondary rounded-3 px-3 py-2"
                                name="provider" value="@provider.Name"
                                title="Registrati con @provider.DisplayName">
                            <i class="bi bi-box-arrow-in-right me-1"></i> @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
