@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reimposta password";
}

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height:80vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4" style="max-width:420px; width:100%;">
        <div class="text-center mb-3">
            <i class="bi bi-shield-lock" style="font-size:3rem; color:var(--tm-primary);"></i>
            <h1 class="h4 fw-bold mt-2 text-dark">Reimposta la tua password</h1>
            <p class="text-muted small mb-0">Inserisci la nuova password per il tuo account</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-3"
                       autocomplete="username" aria-required="true"
                       placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control rounded-3"
                       autocomplete="new-password" aria-required="true"
                       placeholder="Inserisci nuova password" />
                <label asp-for="Input.Password">Nuova password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-3"
                       autocomplete="new-password" aria-required="true"
                       placeholder="Conferma nuova password" />
                <label asp-for="Input.ConfirmPassword">Conferma password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                <i class="bi bi-arrow-repeat me-1"></i> Reimposta password
            </button>
        </form>

        <div class="text-center mt-3 small">
            <a asp-page="./Login" class="text-decoration-none text-primary">
                <i class="bi bi-box-arrow-in-right me-1"></i> Torna al login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
