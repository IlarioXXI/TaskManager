@using TaskManagerWeb.Models
@model IEnumerable<TeamVM>

<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="card-header bg-white border-bottom py-3 px-4 d-flex align-items-center justify-content-between">
        <h4 class="mb-0 fw-semibold" style="color:var(--tm-primary);">
            <i class="bi bi-people-fill me-2"></i> Teams
        </h4>
        <a asp-action="Upsert" asp-controller="Team" class="btn btn-primary px-3 py-2 rounded-3">
            <i class="bi bi-plus-lg me-1"></i> Nuovo Team
        </a>
    </div>

    <div class="card-body px-4 py-4">
        @if (!Model.Any())
        {
            <div class="alert alert-info border-0 rounded-3 shadow-sm">
                <i class="bi bi-info-circle me-1"></i> Nessun team disponibile.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-12">
                        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center py-3 px-4">
                                <div>
                                    <h5 class="fw-semibold mb-0">@item.Team.Name</h5>
                                    <p class="text-muted small mb-0">@(item.Team.Users?.Count() ?? 0) utenti</p>
                                </div>
                                <div class="d-flex gap-2">
                                    <a asp-area="Admin" asp-action="Upsert" asp-controller="Team"
                                       asp-route-id="@item.Team.Id"
                                       class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button data-id="@item.Team.Id"
                                            class="delete btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="card-body px-4 py-3">
                                <div class="row gy-3">
                                    <div class="col-12 col-lg-6">
                                        <h6 class="text-muted text-uppercase small mb-1 fw-semibold">Utenti</h6>
                                        @if (item.Team.Users != null && item.Team.Users.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var user in item.Team.Users)
                                                {
                                                    <li><i class="bi bi-person me-1 text-primary"></i> @user.Name</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted small fst-italic mb-0">Nessun utente assegnato</p>
                                        }
                                    </div>

                                    <div class="col-12 col-lg-6">
                                        <h6 class="text-muted text-uppercase small mb-1 fw-semibold">Task</h6>
                                        @if (item.TaskItems != null && item.TaskItems.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var t in item.TaskItems)
                                                {
                                                    var color = t.Priority.Name.ToLower() switch
                                                    {
                                                        "low" => "success",
                                                        "medium" => "warning",
                                                        _ => "danger"
                                                    };
                                                    <div class="p-3 rounded-3 border bg-light flex-fill"
                                                         style="min-width:240px;">
                                                        <h6 class="fw-semibold mb-1">@t.Title</h6>
                                                        <p class="small mb-1 text-muted">@t.Status.Name</p>
                                                        <span class="badge bg-@color-subtle text-dark">@t.Priority.Name</span>

                                                        <div class="mt-2 d-flex flex-wrap gap-1">
                                                            <a asp-area="Admin" asp-action="Upsert" asp-controller="TaskItem"
                                                               asp-route-teamId="@item.Team.Id"
                                                               asp-route-id="@t.Id"
                                                               class="btn btn-sm btn-primary rounded-3">
                                                                <i class="bi bi-pencil me-1"></i> Modifica
                                                            </a>
                                                            <a asp-area="Admin" asp-action="Index" asp-controller="History"
                                                               asp-route-id="@t.Id"
                                                               class="btn btn-sm btn-outline-secondary rounded-3">
                                                                <i class="bi bi-clock-history me-1"></i> Storico
                                                            </a>
                                                            <a asp-area="User" asp-action="Upsert" asp-controller="Comment"
                                                               asp-route-taskId="@t.Id"
                                                               class="btn btn-sm btn-outline-success rounded-3">
                                                                <i class="bi bi-chat-dots me-1"></i> Commento
                                                            </a>
                                                        </div>

                                                        @if (t.Comments != null && t.Comments.Any())
                                                        {
                                                            <div class="mt-3">
                                                                <h6 class="small fw-semibold text-muted mb-1">Commenti:</h6>
                                                                @foreach (var comment in t.Comments)
                                                                {
                                                                    <div class="border rounded-3 p-2 mb-2 bg-white">
                                                                        <strong>@comment.AppUser.Name:</strong>
                                                                        <small class="text-muted d-block">@Html.Raw(comment.Description)</small>
                                                                    </div>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted small fst-italic mb-0">Nessun task assegnato</p>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer bg-white border-0 text-end py-3 px-4">
                                <a asp-area="Admin" asp-action="Upsert" asp-controller="TaskItem"
                                   asp-route-teamId="@item.Team.Id"
                                   class="btn btn-outline-primary rounded-3">
                                    <i class="bi bi-plus-circle me-1"></i> Aggiungi Task
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).on("click", ".delete", function (e) {
            e.preventDefault();
            var teamId = $(this).data("id");
            if (!teamId) return;

            Swal.fire({
                title: "Sei sicuro?",
                text: "Il team verrà eliminato definitivamente.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#1c7d6f",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sì, elimina"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", "Team")' + '?id=' + encodeURIComponent(teamId);
                }
            });
        });
    </script>
}
